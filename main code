        if event.type == pygame.QUIT :
            pygame.quit()
            quit()
    for event in events:
        if event.type==pygame.MOUSEMOTION:
            mousePos=event.pos
        #if event.type == pygame.MOUSEBUTTONDOWN : #check if clicked#fix will go here
         #   if mousePos[0]<64 and mousePos[0]>0 and mousePos[1]<66 and mousePos[1]>16:
